    await engine.lazy_prewarm()
    if hasattr(engine, '_prewarmed'):
        assert engine._prewarmed
    
    # Test cleanup (should not raise exceptions)
    await engine.cleanup()
    
    print("âœ… Lifecycle management test passed")


