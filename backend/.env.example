# Required: Generate a random secret key (64 characters)
SECRET_KEY=your-super-secret-random-key-change-this-in-production

# Optional: For AI features using OpenRouter
OPENROUTER_API_KEY=your-openrouter-api-key-here

# Database (SQLite - for local development)
DATABASE_URL=sqlite:///./thirdvoice.db
DATABASE_PATH=thirdvoice.db

# Supabase (Production Database)
# Get these from: Supabase Dashboard > Project Settings > API
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-service-role-key  # Use service_role key (NOT anon) for backend
USE_SUPABASE=False  # Set to True to use Supabase instead of SQLite

# Cache settings
CACHE_EXPIRY_DAYS=7

# Optional: Production settings
ENVIRONMENT=development
DEBUG=True

# Demo User Credentials (CHANGE IN PRODUCTION!)
# These should be unique per deployment for security
DEMO_EMAIL=demo@thethirdvoice.ai
DEMO_PASSWORD=demo123

# JWT Token Expiry
ACCESS_TOKEN_EXPIRE_MINUTES=30
DEMO_TOKEN_EXPIRE_HOURS=24
